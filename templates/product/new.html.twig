{% extends 'base.html.twig' %}

{% block title %}
    Ajouter un produit
{% endblock %}

{% block body %}

    {{ form_start(productForm) }}
        <h1>Ajouter un produit</h1> 
        {{ form_row(productForm.title) }}
        {{ form_row(productForm.image) }}
        {{ form_row(productForm.price) }}
        {{ form_rest(productForm) }}
