{% extends 'base.html.twig' %}


{% block title %} Detail Article {% endblock %}



{% block body %}

<h1>Detail Produit</h1>

<div class="container mt-3">
    <h1 class="text-center mb-3">{{product.title}}</h1>
    <div class="d-flex flex-column justify-content-center">
        <div class="d-flex flex-row mb-3 mt-3 justify-content-center">
            <div class="d-flex flex-column col-4">
                {{product.image}}
                <div class="d-flex flex-column col-4">
                    {{product.price}}
                </div>
                <div class="card-body text-end">
					<a href="{{ path('new_commentaire', { id: product.id}) }}" class="card-link btn btn-primary">
						Commenter Produit</a>
				</div>
            </div>       
        </div>
    </div>
</div>

{% endblock %}